@model Aspmvcadoapp.Customer
@{
    ViewData["Title"] = "AddNew";
}
<div>
    <h3>Create New Customer</h3>
</div>
<hr/>
<div>
    <form asp-action="AddCustomer" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Id">Id:</label>
            <div class="col-md-5">
                <input asp-for="Id" type="number" class="form-control" />
                <div><span asp-validation-for="Id" class="text-danger"></span></div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Name">Name:</label>
            <div class="col-md-5">
                <input asp-for="Name" class="form-control" />
                <div><span asp-validation-for="Name" class="text-danger"></span></div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="EmailAddress">EmailAddress:</label>
            <div class="col-md-5">
                <input asp-for="EmailAddress" class="form-control" />
                <div><span asp-validation-for="EmailAddress" class="text-danger"></span></div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Salary">Salary:</label>
            <div class="col-md-5">
                <input asp-for="Salary" type="number" class="form-control" />
                <div><span asp-validation-for="Salary" class="text-danger"></span></div>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>