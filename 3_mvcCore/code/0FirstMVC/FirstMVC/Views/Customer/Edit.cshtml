@model FirstMVC.Customer

   <div>
       <div>  @ViewBag.Error</div>
       <div> @ViewBag.InnerError</div>
</div>
<div>
  <form asp-action="Edit" method="post">
        <div asp-validation-summary="All" class = "text-danger"></div>
         <div class="form-group">
            <label asp-for="Id">Id:</label>
            <div class="col-md-5">
                <input asp-for="Id" class = "form-control"  />
                <div><span asp-validation-for="Id" class="text-danger"></span></div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Name">Name:</label>
            <div class="col-md-5">
                <input asp-for="Name" class = "form-control"  />
                <div><span asp-validation-for="Name" class="text-danger"></span></div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="EmailAddress">EmailAddress:</label>
            <div class="col-md-5">
                <input asp-for="EmailAddress" class = "form-control"/>
                <div><span asp-validation-for="EmailAddress" class="text-danger"></span></div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Advance">Salary:</label>
            <div class="col-md-5">
                <input asp-for="Advance" class = "form-control" />
                <div><span asp-validation-for="Advance" class="text-danger"></span></div>
            </div>
        </div>
        <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
        </div>   
    </form>  
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>