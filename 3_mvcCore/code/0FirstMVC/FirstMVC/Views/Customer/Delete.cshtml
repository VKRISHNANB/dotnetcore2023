@model FirstMVC.Customer

    <h3>Are you sure you want to delete this?</h3>
<div>
    <div>  @ViewBag.Error</div>
    <div>  @ViewBag.InnerError</div>
</div>
<div>
    <div class="form-group">
            <div class="col-md-5">
                <label asp-for="Id">Id:</label>           
                <label>@Model.Id</label>
            </div>
    </div>
    <div class="form-group">
        <label asp-for="Name">Name:</label>
        <label>@Model.Name</label>
    </div>
    <div class="form-group">
        <label asp-for="EmailAddress">EmailAddress:</label>
        <label>@Model.EmailAddress</label>
    </div>
    <div class="form-group">
        <label asp-for="Advance">Salary:</label>
        <label>@Model.Advance</label>
    </div>
 
        @using (Html.BeginForm()) {
            @Html.AntiForgeryToken()
    
            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-primary" /> |
                @Html.ActionLink("Back to List", "Index")
            </div>
        }
    </div> 
