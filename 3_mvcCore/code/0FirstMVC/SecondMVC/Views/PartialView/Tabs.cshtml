@{
    ViewData["Title"] = "Tabs Page";
}

<div>
    <!-- Tab Buttons -->
    <ul id="tabstrip" class="nav nav-tabs" role="tablist">
        <li class="active">
            <a href="#_FirstTab" role="tab" data-toggle="tab">Submission</a> |
        </li>
        <li>
            <a href="#_SecondTab" role="tab" data-toggle="tab">Search</a> |
        </li>
        <li>
            <a href="#_ThirdTab" role="tab" data-toggle="tab">Comments</a> |
        </li>
        @*<li>
            <a href="#_ForthTab" role="tab" data-toggle="tab">ViewComponent</a> |
        </li>*@
    </ul>

    <!-- Tab Content Containers -->
    <div class="tab-content">
        <div class="tab-pane fade in active" id="_FirstTab">
            <!-- Call partial view to load initial page load data -->
            @*@Html.Partial("_FirstTab")*@
            <partial name="Score" />
        </div>
        <div class="tab-pane fade" id="_SecondTab">
            <partial name="ChildList" />
        </div>
        <div class="tab-pane fade" id="_ThirdTab">
            <partial name="ChildViewdata" view-data="ViewData" />
        </div>
        @*<div class="tab-pane fade" id="_ForthTab">
            @await Component.InvokeAsync("Display", new { section = "News" })
        </div>*@
    </div>
</div>
<hr/>
<partial name="Score" />
<partial name="ChildList" />
<partial name="ChildViewdata" view-data="ViewData" />

