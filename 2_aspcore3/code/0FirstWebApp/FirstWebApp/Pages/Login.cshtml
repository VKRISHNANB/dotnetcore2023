@page
@model FirstWebApp.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}
<div class="container">
    <form method="post">
        @*<div asp-validation-summary="All"></div>*@
        <div >
            <label asp-for="Member.Name">Name</label>
            <input class="form-control" asp-for="Member.Name" placeholder="Enter Name" />
            <span class="text-danger" asp-validation-for="Member.Name"></span>
        </div>
        <div>
            <label asp-for="Member.Password">Password</label>
            <input class="form-control" type="password" asp-for="Member.Password"
                   placeholder="Enter Password" />
            <span class="text-danger" asp-validation-for="Member.Password"></span>
        </div>
        <input type="submit" value="Signin" />
    </form>
    <div class="container">
        <div>Name=@ViewData["name"]</div>
        <div>pwd=@ViewData["pwd"]</div>
        <div>ERROR=@ViewData["error"]</div>
    </div>
</div>